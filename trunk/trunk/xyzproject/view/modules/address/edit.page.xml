<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/modules/address/list.xhtml"
      login-required="false">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{addressHome.wire}"/>

   <param name="addressFrom"/>
   <param name="addressId" value="#{addressHome.addrId}"/>


   <navigation from-action="#{addressHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/modules/address/view.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{addressHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/modules/address/view.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{addressHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/modules/address/list.xhtml"/>
      </rule>
   </navigation>

</page>
