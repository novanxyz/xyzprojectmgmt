<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit name="xyzprojectPU" transaction-type="RESOURCE_LOCAL">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>xyzprojectDatasource</jta-data-source>
      <non-jta-data-source>java:xyzprojectDatasourceLocal</non-jta-data-source>
      <!-- The <jar-file> element is necessary if you put the persistence.xml in the WAR and the classes in the JAR -->      
      <jar-file>xyzproject.jar</jar-file> 
      
      <properties>
	     <property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml"/>
	     <property name="jboss.entity.manager.jndi.name" value="java:/xyzprojectEntityManager"/>	     
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/xyzprojectEntityManagerFactory"/>
         
         <!-- 
         <property name="hibernate.archive.autodetection" value="hbm"/>
		 <property name="hibernate.ejb.autodetection" value="hbm"/>
		 -->
         
         
         <!-- 
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
         <property name="hibernate.show_sql" value="true"/>
         <property name="hibernate.format_sql" value="true"/>
         -->
      </properties>
   </persistence-unit>
    
</persistence>
