<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="xyzprojectSessionFactory">
 
	  
 		<property name="connection.datasource">xyzprojectDatasource</property>
     <!--            
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  		<property name="hibernate.connection.password">diinda</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/xyzproject</property>
  		<property name="hibernate.connection.username">x</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
     -->
        
                
                        
        <property name="transaction.factory_class">org.hibernate.transaction.CMTTransactionFactory</property>        
        <property name="transaction.manager_lookup_class">org.hibernate.transaction.JBossTransactionManagerLookup</property>                
        <property name="current_session_context_class">thread</property>
		 
		
		<property name="hibernate.connection.release_mode">after_statement</property>
		<property name="hibernate.transaction.flush_before_completion">true</property>
		<property name="hibernate.transaction.auto_close_session">true</property>
		<property name="hibernate.transaction.attribute">RequiredNew</property>

        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="hibernate.cache.use_minimal_puts">true</property>
		<property name="cache.use_second_level_cache">false</property>
		<property name="hibernate.show_sql">true</property>
		
		

		<!--  <property name="hibernate.artifact">hbm</property> -->
		
		<property name="hibernate.default_batch_fetch_size">3</property>
		<property name="hibernate.jdbc.fetch_size">2</property>
		<property name="hibernate.jdbc.use_get_generated_keys">true</property>
		<property name="hibernate.jdbc.batch_size">25</property>
		<property name="hibernate.order_inserts">true</property>
		<property name="hibernate.order_updates">true</property>
		<property name="hibernate.max_fetch_depth">4</property>
		<property name="hibernate.use_sql_comments">true</property> 
		<property name="hibernate.xml.output_stylesheet"></property> 		
		<property name="hibernate.query.substitutions"> 1 true, 0 false</property>
		
		<property name="hibernate.hbm2ddl.auto">none</property> 
		<property name="auto-import">false</property>
		<property name="hibernate.generate_statistics">true</property>


		
		<property name="hibernate.archive.autodetection"></property>
		<property name="hibernate.ejb.autodetection"></property>		
		
		
		
		
 		<mapping resource="com/visitek/xyzproject/model/entity/Address.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Company.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Consultant.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Contact.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Department.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Employee.hbm.xml" />
 		<mapping resource="com/visitek/xyzproject/model/entity/Project.hbm.xml" /> 
 		<mapping resource="com/visitek/xyzproject/model/entity/Task.hbm.xml" />    

		<mapping resource="com/visitek/xyzproject/model/business/AccessControlList.hbm.xml" />
		<mapping resource="com/visitek/xyzproject/model/business/AuditTrail.hbm.xml" /> 
		<mapping resource="com/visitek/xyzproject/model/business/Module.hbm.xml" /> 
		<mapping resource="com/visitek/xyzproject/model/business/Role.hbm.xml" />
		<mapping resource="com/visitek/xyzproject/model/business/Session.hbm.xml" /> 		 
		<mapping resource="com/visitek/xyzproject/model/business/User.hbm.xml" />
		
		 
 </session-factory>
</hibernate-configuration>